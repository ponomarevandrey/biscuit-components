//- mixin for creating a block for each component of the library:
mixin block(biscuitBlock, ...allMods)
  section(class='block' data-category=`${biscuitBlock.category}` data-name=`${biscuitBlock.name}`)
    div(class='block__about')
      header(class='block__header') 
        span(class='heading heading_size_h1 text text_font-stack_monospace') #{biscuitBlock.name}
        a(
          href=`${biscuitBlock.repository}`
          class='icons' 
          aria-hidden='true'
          focusable='false' 
          title='Github'
        )
          span(class='icons__access-label') Github
          svg(class=`icons__img icons__img_size_lg icons__img_color_black`)
            use(xlink:href='./img/sprite.svg#github')
      div(class='block__description') 
        span('text text_display_inline') #{biscuitBlock.description}
      - if (allMods != false)
        div(class='btable')
          table(class='btable__container')
            thead
              tr(class='btable__row text text_color_white')
                th(class='btable__cell btable__cell_type_header btable__col1') Modifiers
                th(class='btable__cell btable__cell_type_header btable__col2') Values
                th(class='btable__cell btable__cell_type_header btable__col3') Description
            tbody
              each mod in allMods
                tr(class='btable__row')
                  td(class='btable__cell btable__cell_type_main btable__col1')
                    code(class='code code_display_inline code_theme_gray') #{mod.name}
                  td(class='btable__cell btable__cell_type_main btable__col2')
                    - if (mod.values === undefined) 
                      span('text text_display_inline') —
                    - else 
                      each value in mod.values
                        code(class='code code_display_inline code_theme_gray') #{value}
                  td(class='btable__cell table__cell_type_main btable__col3') #{mod.description}
    block    



