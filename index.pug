    class SwitchBtn  {
      constructor() {
        let blocks = document.querySelectorAll('[data-name]'); 
        document.addEventListener('click', e => this.handleClick(e));      
        blocks.forEach(block => {
          if (block.querySelector('.block__preview')) {
            block.querySelector('.switch__preview').click();
          } else {
            block.querySelector('.switch__preview').classList.add('switch__preview_disabled');
            block.querySelector('.switch__code').click();
          }
        });
      }

      handleClick(e) {
        const [name] = Object.keys(e.target.dataset);
        const currentBlockEl = e.target.closest('.block');
        // detect, whether we clicked a button or some other area around
        const isButton = e.target.classList.contains('switch__preview') || e.target.classList.contains('switch__code');

        /* if we click outside the buttons, if we click outside the block, or if we click on an already clicked button: */
        if (!currentBlockEl || !isButton || this.isClassActive(e.target.classList)) return;
   
        currentBlockEl.querySelectorAll('.switch__preview, .switch__code').forEach(button => this.removeModifier(button, 'active'));
        currentBlockEl.querySelectorAll('.block__preview, .block__code').forEach(contentBlock => contentBlock.hidden = true);
        
        this.addModifier(e.target, e.target.className, 'active');
        currentBlockEl.querySelector(`.block__${name}`).hidden = false;
      }

      isClassActive(classList) {
        for (let className of classList) {
          if (className.includes('active')) return true;
        }
      }

      addModifier(node, targetClass, modifierName) {
        node.classList.add(`${targetClass}_${modifierName}`);
      }

      removeModifier(node, modifierName) {
        let classes = node.classList;
        for (let className of classes) {
          if (className.includes('active')) {
            classes.remove(className);
          }
        }
      }
    } 
   
