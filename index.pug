  script.
    class Filter {
      constructor(rootNode, defaultTab = 'typography') {
        this._init = false; // flag to prevent scrolling on first load
        this._rootNodeInitialPisition = rootNode.getBoundingClientRect().top + pageYOffset;

        // collect blocks
        let blocks = document.querySelectorAll('[data-category]'); 

        this.buildFilter(this.sortBlocks(blocks), rootNode);
        
        rootNode.addEventListener('click', e => this.handleClick(e, blocks));
        window.addEventListener('scroll', e => this.handleScroll(e, rootNode));

        // initialize filter, display default tab:
        document.querySelector(`[data-category='${defaultTab}']`).click();
      }

      handleClick(e, blocks) {
        // filter blocks:

        // if we occasionally clicked not on the button somewhere near it:
        if (e.target === e.currentTarget) return;

        // handle filters:
        const filters = Array.from(document.querySelector('.bfilter').children);
        filters.forEach(filter => {
          if (filter.matches(`[data-category='${e.target.dataset.category}`)) {
            filter.classList.add('bfilter_active');
          } else {
            filter.classList.remove('bfilter_active');
          }
        });

        // handle blocks:
        blocks.forEach(block => {
          if (block.dataset.category === e.target.dataset.category) {   
            block.classList.add('block_active');
          } else block.classList.remove('block_active');
        });


        //console.log(this._rootNodeInitialPisition)
        if (!this._init) this._init = true;
        else scrollTo(0, this._rootNodeInitialPisition);
      }

      buildFilter(sortedBlocks, node) {
        // build list:
        const frag = new DocumentFragment();

        for (let prop in sortedBlocks) {
          if (sortedBlocks[prop] && sortedBlocks[prop].length > 0) {
            const li = document.createElement('li');
            li.classList.add('bfilter__item');
            li.dataset.category = prop
            li.textContent = prop;
            frag.append(li)
          }
        }

        node.append(frag);
      }

      sortBlocks(blocks) {
        const sortedBlocks = {};

        blocks.forEach(block=> {
