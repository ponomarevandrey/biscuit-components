include ./../block-mixin.pug

+block(
  { name: 'list',
    repository: 'https://github.com/ponomarevandrey/biscuit-components/blob/master/src/list',
    category: 'typography',
    description: '' },

  { name: 'style',
    values: ['ordered', 'unordered'],
    description: 'List style' }
)
  div(class='block__example')
    div(class='block__preview block__preview_halign_space-evenly')
      ul(class='list list_style_unordered')
        li(class='list__item') Fruit
          ul(class='list list_style_unordered')
            li(class='list__item') Bananas
            li(class='list__item') Apples
              ul(class='list list_style_ordered')
                li(class='list__item') Green
                li(class='list__item') Red
            li(class='list__item') Pears
        li(class='list__item') Vegetables
        li(class='list__item') Meat
