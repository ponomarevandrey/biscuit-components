include ./../block-mixin.pug

+block(
  { name: 'img-svg',
    repository: 'https://github.com/ponomarevandrey/biscuit-components/blob/master/src/img-svg',
    category: 'images',
    description: 'SVG image. "img-svg" component can be implemented in one of three ways, see details in README.md on github' },

  { name: 'bg',
    values: undefined,
    description: 'Use SVG as background-image' }
  )
  div(class='block__example')
    div(class='block__preview')
      //- as <img>
      img(
        src='./img/logo.svg' 
        alt='Logoipsum logo'
        title='Logoipsum'
        class='img-svg'
      )
      //- as CSS background-image
      div(class='img-svg img-svg_bg')
      //- and if you need interactivity, use SVG with the help of <object> tag
      object(
        type="image/svg+xml" 
        data='./img/logo.svg'
        class=`img-svg ${classList}`
      ) Your browser does not support SVG

div(class='blocks__videos')
+block(
  { name: 'embed',
    repository: 'https://github.com/ponomarevandrey/biscuit-components/blob/master/src/label',
    category: 'videos',
    description: 'Embeded content (youtube videos, ...)' },

  { name: 'ratio',
    values: ['4x3'],
    description: 'Aspect ratio' }
)
  div(class='block__example')
    div(class='block__preview')
      div(class='embed') 
        iframe(
          src='https://www.youtube.com/embed/oRkNaF0QvnI'
          allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
          allowfullsc
        )