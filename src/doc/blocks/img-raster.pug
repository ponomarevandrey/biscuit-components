include ./../block-mixin.pug

+block(
  { name: 'img-raster',
    repository: 'https://github.com/ponomarevandrey/biscuit-components/tree/master/src/blocks/img-raster',
    category: 'images',
    description: 'Raster image' },

  { name: 'theme',
    values: ['black'],
    description: "Put image into black frame" }  
