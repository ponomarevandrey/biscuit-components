include ./../block-mixin.pug

+block(
  { name: 'embed',
    repository: 'https://github.com/ponomarevandrey/biscuit-components/tree/master/src/blocks/embed',
    category: 'videos',
    description: 'Embeded content (youtube videos, ...)' },

  { name: 'ratio',
    values: ['4x3'],
    description: 'Aspect ratio' }
)
  div(class='block__example')
    div(class='embed') 
      iframe(
        src='https://www.youtube.com/embed/oRkNaF0QvnI'
        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
        allowfullsc
      )