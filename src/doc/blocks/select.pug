include ./../block-mixin.pug

+block(
  { name: 'select',
    repository: 'https://github.com/ponomarevandrey/biscuit-components/tree/master/src/blocks/select',
    category: 'components',
    description: 'Custom select box. Populate the select menu with items from plain JavaScript object or JSON file' }
)
  div(class='block__example' style="overflow: visible;")
    div(class='select' id="select-difficulty")
      select(class='select__system')
        option(value='0') Select difficulty:
        option(value='1') Easy
        option(value='2') Moderate
        option(value='3') Difficult